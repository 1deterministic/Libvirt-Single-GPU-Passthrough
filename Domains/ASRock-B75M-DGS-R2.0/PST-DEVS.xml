    <!-- The integrated usb controllers do not work on macOS, you will have to resort on individual usb passthrough for each device -->
    <!-- integrated usb controller #2 -->
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1a' function='0x0'/>
      </source>
    </hostdev>
    <!-- integrated usb controller #1 -->
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1d' function='0x0'/>
      </source>
    </hostdev>
    <!-- integrated sound card -->
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1b' function='0x0'/>
      </source>
    </hostdev>
