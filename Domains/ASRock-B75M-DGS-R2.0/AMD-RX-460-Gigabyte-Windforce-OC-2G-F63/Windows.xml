<!--
This is only a reference, do not define this domain right away!

This xml is defined with
* only 1GB of RAM, change to the desired amount in these tags: memory, currentMemory
* only 1 CPU core, change to the desired amount in these tags: vcpu, topology (topology-cores * topology-threads should equal vcpu)
* only the 1st core pinned to the 1st cpu thread available, add more until you have one for each vcpu defined

You also have to replace the these values
::OVMF-PATH:: with the path to "OVMF_CODE.fd" on your system (for instance /path/to/OVMF_CODE.fd, on Arch is /usr/share/ovmf/x64/OVMF_CODE.fd)
::NVRAM-PATH:: with the path where you want to store the *_VARS.fd for this vm (for instance /path/to/NVRAM/Windows_VARS.fd)
::QCOW2-PATH:: with the path where you have an existing qcow2 file that will be the system drive for this vm (for instance /path/to/Windows.qcow2)
::CDR-PATH:: with the path where you have an iso file you wish to use in the vm, an iso installer usually (for instance /path/to/Windows.iso)
::VTCD-PATH:: with the path where you have the Red Hat VirtIO Windows drivers iso (for instance /path/to/VirtIO-Windows-Drivers.iso, remember that Windows doesn't come with Virtio drivers and you will need one to install the system)
::MAC-ADDR:: with the desired MAC address for the virtual network card (for instance 52:54:00:d2:d3:3d)
::VROM-PATH:: with the path where you have the rom file for the graphics card (for instance /path/to/AMD-RX-460-Gigabyte-Windforce-OC-2G-F63.rom)
-->

<domain type='kvm'>
  <name>Windows</name>
  <uuid>485663a3-80bd-46a9-a082-5dcc2f428c10</uuid>
  <memory unit='MiB'>1024</memory>
  <currentMemory unit='MiB'>1024</currentMemory>
  <vcpu placement='static'>1</vcpu>
  <cputune>
    <vcpupin vcpu='0' cpuset='0'/>
    <emulatorsched scheduler='rr' priority='1'/>
  </cputune>
  <os>
    <type arch='x86_64' machine='pc-q35-4.0'>hvm</type>
    <loader readonly='yes' type='pflash'>::OVMF-PATH::</loader>
    <nvram>::NVRAM-PATH::</nvram>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <hyperv>
      <relaxed state='on'/>
      <vapic state='on'/>
      <spinlocks state='on' retries='8191'/>
      <vendor_id state='on' value='whatever'/>
    </hyperv>
    <vmport state='off'/>
    <ioapic driver='kvm'/>
  </features>
  <cpu mode='host-model' check='none'>
    <topology sockets='1' cores='1' threads='1'/>
  </cpu>
  <clock offset='localtime'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='yes'/>
    <timer name='hypervclock' present='yes'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' cache='unsafe' discard='ignore' detect_zeroes='off'/>
      <source file='::QCOW2-PATH::'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='::CDR-PATH::'/>
      <target dev='sda' bus='sata'/>
      <readonly/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='::VTCD-PATH::'/>
      <target dev='sdb' bus='sata'/>
      <readonly/>
    </disk>
    <controller type='usb' index='0' model='qemu-xhci' ports='15'>
    </controller>
    <controller type='scsi' index='0' model='virtio-scsi'>
    </controller>
    <controller type='pci' index='0' model='pcie-root'/>
    <controller type='pci' index='1' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='1' port='0x10'/>
    </controller>
    <controller type='pci' index='2' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='2' port='0x11'/>
    </controller>
    <controller type='pci' index='3' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='3' port='0x12'/>
    </controller>
    <controller type='pci' index='4' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='4' port='0x13'/>
    </controller>
    <controller type='pci' index='5' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='5' port='0x14'/>
    </controller>
    <controller type='pci' index='6' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='6' port='0x8'/>
    </controller>
    <controller type='pci' index='7' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='7' port='0x9'/>
    </controller>
    <controller type='pci' index='8' model='pcie-to-pci-bridge'>
      <model name='pcie-pci-bridge'/>
    </controller>
    <controller type='pci' index='9' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='9' port='0xa'/>
    </controller>
    <controller type='pci' index='10' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='10' port='0xb'/>
    </controller>
    <controller type='sata' index='0'>
    </controller>
    <interface type='network'>
      <mac address='::MAC-ADDR::'/>
      <source network='default'/>
      <model type='virtio'/>
      <link state='up'/>
    </interface>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x01' slot='0x00' function='0x0'/>
      </source>
      <rom file='::VROM-PATH::'/>
    </hostdev>
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x01' slot='0x00' function='0x1'/>
      </source>
      <rom file='::VROM-PATH::'/>
    </hostdev>
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1a' function='0x0'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1d' function='0x0'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='0x00' slot='0x1b' function='0x0'/>
      </source>
    </hostdev>
    <memballoon model='virtio'>
    </memballoon>
  </devices>
</domain>
