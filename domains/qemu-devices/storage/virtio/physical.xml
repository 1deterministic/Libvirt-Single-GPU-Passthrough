<!-- change <source file='/dev/sdn'... to reflect the path of the disk to use and <target dev='vdn'... to any sd(number) you like as long as it is unique in within all target disks in your .xml -->
<devices>
  <disk type='block' device='disk'>
    <driver name='qemu' type='raw'/>
    <source dev='/dev/sdn'/>
    <target dev='vdn' bus='virtio'/>
  </disk>
</devices>
