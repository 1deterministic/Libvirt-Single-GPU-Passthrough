<!-- change <target dev='vdn'... to any sd(number) you like as long as it is unique in within all target disks in your .xml -->
<devices>
  <disk type='file' device='disk'>
    <driver name='qemu' type='qcow2'/>
    <source file='/usr/share/libvirt/lsgp/disks/file.qcow2'/>
    <target dev='vdn' bus='virtio'/>
  </disk>
</devices>
